FROM ubuntu:18.04

ENV OS_LOCALE="en_US.UTF-8" \
	PHP_VERSION="7.3" \
	ACCEPT_EULA=Y
RUN apt-get update && apt-get install -y locales && locale-gen ${OS_LOCALE}
ENV LANG=${OS_LOCALE} \
    LANGUAGE=${OS_LOCALE} \
    LC_ALL=${OS_LOCALE} \
    DEBIAN_FRONTEND=noninteractive

ENV APACHE_CONF_DIR=/etc/apache2 \
    PHP_CONF_DIR=/etc/php/${PHP_VERSION} \
    PHP_DATA_DIR=/var/lib/php  \
    PHP_DATA_HTML=/var/www/html  

COPY entrypoint.sh /sbin/entrypoint.sh

RUN	\
	BUILD_DEPS='software-properties-common' \
    && dpkg-reconfigure locales \
	&& apt-get install --no-install-recommends -y $BUILD_DEPS \
	&& add-apt-repository -y ppa:ondrej/php \
	&& add-apt-repository -y ppa:ondrej/apache2 \
	&& apt-get update -y \
	# Tools
    && apt-get install -y \
	   curl apache2 vim\
	   libapache2-mod-php${PHP_VERSION} \
	   php${PHP_VERSION}-cli \
	   php${PHP_VERSION}-readline \
	   php${PHP_VERSION}-mbstring \
	   php${PHP_VERSION}-zip \
	# Libraries PHP
	&& apt-get update -y && apt-get install -y \
	   php${PHP_VERSION}-intl \
	   php${PHP_VERSION}-xml \
	   php${PHP_VERSION}-json \
	   php${PHP_VERSION}-curl \
	   php${PHP_VERSION}-gd \
	   php${PHP_VERSION}-pgsql \
	   php${PHP_VERSION}-mysql \
	   php${PHP_VERSION}-dev \
	   php${PHP_VERSION}-opcache \
	   php-pear \
    # Apache settings
    && cp /dev/null ${APACHE_CONF_DIR}/conf-available/other-vhosts-access-log.conf \
    && rm ${APACHE_CONF_DIR}/sites-enabled/000-default.conf ${APACHE_CONF_DIR}/sites-available/000-default.conf \
    && a2enmod rewrite php${PHP_VERSION} \
	# Install composer
	&& curl -sS https://getcomposer.org/installer | php -- --version=1.8.4 --install-dir=/usr/local/bin --filename=composer \
	# Cleaning
	&& apt-get purge -y --auto-remove $BUILD_DEPS \
	&& apt-get autoremove -y \
	&& rm -rf /var/lib/apt/lists/* \
	# Forward request and error logs to docker log collector
	&& ln -sf /dev/stdout /var/log/apache2/access.log \
	&& ln -sf /dev/stderr /var/log/apache2/error.log \
	&& chmod 755 /sbin/entrypoint.sh \
	&& chmod 755 ${PHP_DATA_HTML} \
	&& chown www-data:www-data ${PHP_DATA_DIR} -Rf \
	&& chown www-data:www-data ${PHP_DATA_HTML} -Rf \
	# requisites for mssql
	&& apt-get update -y && apt-get install -y apt-transport-https \
    && curl https://packages.microsoft.com/keys/microsoft.asc | apt-key add - \
    && curl https://packages.microsoft.com/config/ubuntu/18.04/prod.list > /etc/apt/sources.list.d/mssql-release.list \
    && apt-get update -y \
	&& apt-get install -y mssql-tools msodbcsql17 unixodbc-dev \
    && pecl install sqlsrv pdo_sqlsrv xdebug 

#Instalar SOAP
RUN apt-get update && \
    apt-get install -y libxml2-dev \
    && apt-get install php${PHP_VERSION}-soap -y

#Instalar Cron y supervisor
RUN apt-get update && apt-get install -y cron supervisor 

COPY ./Dockerconfigs/apache2.conf ${APACHE_CONF_DIR}/apache2.conf
COPY ./Dockerconfigs/app.conf ${APACHE_CONF_DIR}/sites-enabled/app.conf
COPY ./Dockerconfigs/php.ini  ${PHP_CONF_DIR}/cli/conf.d/custom.ini
COPY ./Dockerconfigs/php.ini  ${PHP_CONF_DIR}/apache2/conf.d/custom.ini
COPY ./Dockerconfigs/cron.prod  /etc/cron.d/

RUN chmod 0664 /etc/cron.d/cron.prod && \
    crontab /etc/cron.d/cron.prod && \
	echo 'alias art="php /var/www/artisan "' >> ~/.bashrc

WORKDIR /var/www/

EXPOSE 80 443


# By default, simply start apache.
# CMD ["/sbin/entrypoint.sh"]
ADD ./Dockerconfigs/supervisord.conf /etc/supervisor/conf.d/supervisord.conf
CMD /usr/bin/supervisord -c /etc/supervisor/conf.d/supervisord.conf